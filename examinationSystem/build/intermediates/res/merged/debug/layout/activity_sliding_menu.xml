<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/user_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <com.qdjxd.examination.views.CircleImageView
            android:id="@+id/main_user_header"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="20dip"
            android:contentDescription="@string/app_name"
            android:src="@drawable/main_user_header_default"
            android:visibility="visible" />

        <com.qdjxd.examination.views.CircleImageView
            android:id="@+id/dsh_ic_user"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginTop="20dip"
            android:contentDescription="@string/app_name"
            android:src="@drawable/dsh_ic_user_default"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:text="@string/login_now"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/menu_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="@string/tip"
                    android:textColor="@color/color"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dip"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_grzx_jiantou" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.2dip"
        android:layout_marginTop="20dip"
        android:background="@color/color"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:id="@+id/exam_storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_grzx_tiku" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="20dip"
                android:layout_weight="5"
                android:text="@string/my_question_bank"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="20dip"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_grzx_jiantou" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.2dip"
            android:background="@color/color"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:id="@+id/download_exam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_grzx_download" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="20dip"
                android:layout_weight="5"
                android:text="@string/down_question_bank"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="20dip"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_grzx_jiantou" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.2dip"
            android:background="@color/color"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:id="@+id/param_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_sliding_menu_setting" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="20dip"
                android:layout_weight="5"
                android:text="@string/param_setting"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="20dip"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_grzx_jiantou" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/G:/AndroidStudioProjects/Android_FragmentSample1/examinationSystem/src/main/res/layout/activity_sliding_menu.xml -->