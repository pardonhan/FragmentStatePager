<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid 
                android:color="@color/gray" />

            <stroke 
                android:width="1dp" 
                android:color="@color/gray"
                android:dashGap="0dp" />

            <padding 
                android:top="5dp"
                android:bottom="5dp"
                android:left="35dp" 
                android:right="35dp" />

            <corners 
                android:bottomRightRadius="5dp"
                android:bottomLeftRadius="5dp" 
                android:topLeftRadius="5dp" 
                android:topRightRadius="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid 
                android:color="@android:color/white" />

            <stroke 
				android:width="1dp" 
				android:color="@color/gray" 
				android:dashGap="0dp"/>

           <padding 
               	android:top="5dp"
                android:bottom="5dp"
                android:left="35dp" 
                android:right="35dp" />

            <corners 
                android:bottomRightRadius="5dp"
                android:bottomLeftRadius="5dp" 
                android:topLeftRadius="5dp" 
                android:topRightRadius="5dp" />
        </shape>
    </item>
</selector>