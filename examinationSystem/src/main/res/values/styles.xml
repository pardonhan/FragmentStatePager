<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!--  -->
    <style name="TitleTextViewFontStyle">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dialogTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="my_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 弹出框内容文字样式-->
    <style name="dialogContent">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dialog_text_color</item>
    </style>

    <!-- 分割线格式 gray -->
    <style name="GrayLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/line_gray</item>
    </style>

    <!-- 分割线格式write -->
    <style name="WriteLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/white</item>
    </style>
    <!-- 输入文本框格式 -->
    <style name="InputFontStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#808080</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:background">@drawable/common_edittext</item>
    </style>
    <!-- 显示文本框格式 -->
    <style name="TextViewFontStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="AnimationFade">
        <!-- PopupWindow弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/poupshow</item>
        <item name="android:windowExitAnimation">@anim/pouphide</item>
    </style>

</resources>
